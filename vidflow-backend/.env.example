# Server Configuration
PORT=3001
NODE_ENV=development

# App Version (lite or pro)
# lite = Only legal platforms (Twitter, Reddit, Dailymotion, Vimeo)
# pro = All platforms including YouTube, Instagram, TikTok, Facebook
APP_VERSION=pro

# Allowed Platforms (comma-separated)
# For LITE version, use: twitter,reddit,dailymotion,vimeo
# For PRO version, use: all
ALLOWED_PLATFORMS=all

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:8081,exp://192.168.1.100:8081
