# Database
DATABASE_URL=postgresql://user:password@localhost:5432/videogen
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Storage
STORAGE_PATH=/app/storage
ASSETS_PATH=/app/storage/assets
VIDEOS_PATH=/app/storage/videos
MODELS_PATH=/app/storage/models

# AI Services
OLLAMA_URL=http://ollama:11434
STABLE_DIFFUSION_URL=http://stable_diffusion:7860

# GPU Configuration
CUDA_VISIBLE_DEVICES=0
USE_GPU=true

# Model Configuration
DEFAULT_IMAGE_MODEL=stabilityai/stable-diffusion-xl-base-1.0
DEFAULT_ANIMATION_MODEL=guoyww/animatediff-motion-adapter-v1-5-2
DEFAULT_TTS_MODEL=tts_models/en/ljspeech/tacotron2-DDC
DEFAULT_MUSIC_MODEL=facebook/musicgen-small

# Generation Defaults
DEFAULT_IMAGE_WIDTH=1024
DEFAULT_IMAGE_HEIGHT=1024
DEFAULT_VIDEO_FPS=24
DEFAULT_SCENE_DURATION=5.0
DEFAULT_INFERENCE_STEPS=30
DEFAULT_GUIDANCE_SCALE=7.5

# Job Queue
MAX_CONCURRENT_JOBS=2
JOB_TIMEOUT=3600

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
